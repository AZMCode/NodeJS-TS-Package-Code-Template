{
  "name": "nodejs-ts-package-code-template",
  "version": "0.0.1",
  "description": "A template to build NodeJS Typescript applications, with testing and linting built-in",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "clean": "rm -rf dist/*",
    "build": "npm run lint && npm run build-ts && npm run copy-static-assets",
    "build-release": "npm run lint && npm run build-ts-release && npm run copy-static-assets",
    "build-ts": "tsc --project debug.tsconfig.json",
    "build-ts-release": "tsc --project release.tsconfig.json",
    "copy-static-assets": "ts-node copy-static-assets.ts",
    "debug": "node -r ts-node/register --inspect-brk src/index.ts",
    "lint": "eslint",
    "test": "nyc mocha"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AZMCode/NodeJS-TS-Package-Code-Template.git"
  },
  "author": "AZMCode",
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://github.com/AZMCode/NodeJS-TS-Package-Code-Template/issues"
  },
  "homepage": "https://github.com/AZMCode/NodeJS-TS-Package-Code-Template#readme",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "mocha": "^7.1.1",
    "nyc": "^15.0.1",
    "source-map-support": "^0.5.19",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3"
  },
  "dependencies": {}
}
