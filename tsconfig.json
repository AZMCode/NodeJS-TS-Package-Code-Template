{
    "compilerOptions": {
        "module": "UMD",
		"esModuleInterop": true,
		"target": "ES3",
		"noImplicitAny": true,
		"noImplicitReturns": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
		"alwaysStrict": true,
		"declarationMap": true,
		"importHelpers": true,
		"incremental": true,
		"newline": "lf",
		"outDir": "dist/"
    },
    "include":[
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}
